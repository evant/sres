me.tatarka.sres.sample.MyListItemView<LinearLayout(match, wrap) {
    bind:class = me.tatarka.sres.sample.MyListItem
    orientation = vertical

    TextView(match, wrap) {
        @+id/text
        text = bind(text)
        padding = 10dp
    }

    Button(match, wrap) {
        @+id/button
        text = "Remove Item!"
    }
}